<?xml version="1.0" encoding="utf-8" ?>
<mythuitheme>

    <window name="news">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="heading" from="baseheading">
            <value>News Feeds</value>
        </textarea>

        <buttonlist name="siteslist" from="basebuttonlist">
            <area>5,45,290,400</area>
            <buttonarea>5,25,290,375</buttonarea>
        </buttonlist>

        <buttonlist name="articleslist" from="popupbuttonlist">
            <area>315,45,400,400</area>
            <buttonarea>5,25,400,375</buttonarea>
            <statetype name="upscrollarrow">
                <position>20,94%</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>shared/uparrow.png</filename>
                        <alpha>100</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>shared/uparrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>350,94%</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>shared/downarrow.png</filename>
                        <alpha>100</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>shared/downarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="nosites" from="basetextarea">
            <shape name="nositebg">
                <area>200,150,400,300</area>
                <type>roundbox</type>
                <cornerradius>8</cornerradius>
                <fill color="#bed996" alpha="225" />
                <line color="#77ab77" width="1" />
            </shape>
            <area>205,165,390,270</area>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <shape name="infobg">
            <area>5,441,790,156</area>
            <type>roundbox</type>
            <cornerradius>8</cornerradius>
            <fill color="#bed996" alpha="185" />
            <line color="#77ab77" width="1" />
        </shape>

        <textarea name="title" from="basetextarea">
            <area>15,442,770,35</area>
            <align>allcenter</align>
            <font>dgreenlarge</font>
        </textarea>

        <textarea name="updated" from="basetextarea">
            <area>15,478,770,22</area>
            <align>allcenter</align>
        </textarea>

        <shape name="line0">
            <area>18,505,383,1</area>
            <fill style="gradient">
                <gradient start="#bed996" end="#106732" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <shape name="line0b">
            <area>392,505,382,1</area>
            <fill style="gradient">
                <gradient start="#106732" end="#bed996" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <textarea name="description" from="basetextarea">
            <area>15,510,770,88</area>
            <multiline>yes</multiline>
        </textarea>

        <imagetype name="enclosures">
            <filename>news/enclosures.png</filename>
            <position>50,50</position>
        </imagetype>

        <imagetype name="download">
            <filename>news/download.png</filename>
            <position>75,75</position>
        </imagetype>

        <imagetype name="ispodcast">
            <filename>news/podcast.png</filename>
            <position>100,100</position>
        </imagetype>

    </window>

    <window name="editor">

        <textarea name="title" from="basetextarea">
            <font>dgreenlarge</font>
            <area>15,45,770,35</area>
            <align>allcenter</align>
        </textarea>

        <textarea name="namelabel" from="basetextarea">
            <area>15,80,100,35</area>
            <align>allcenter</align>
        </textarea>

        <textedit name="name" from="basetextedit">
            <position>15,125</position>
        </textedit>

        <textarea name="urllabel" from="basetextarea">
            <area>15,165,100,35</area>
            <align>allcenter</align>
        </textarea>

        <textedit name="url" from="basetextedit">
            <position>15,205</position>
        </textedit>

        <textarea name="iconlabel" from="basetextarea">
            <area>15,245,100,35</area>
            <align>allcenter</align>
        </textarea>

        <textedit name="icon" from="basetextedit">
            <position>15,285</position>
        </textedit>

        <textarea name="podcastlabel" from="basetextarea">
            <area>15,325,100,35</area>
            <align>allcenter</align>
        </textarea>

        <checkbox name="podcast_check" from="basecheckbox">
            <position>125,328</position>
        </checkbox>

        <button name="cancel" from="basesmallbutton">
            <position>15,385</position>
            <value>Cancel</value>
        </button>

        <button name="ok" from="basesmallbutton">
            <position>215,385</position>
            <value>OK</value>
        </button>

    </window>

    <window name="config">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <value>News Settings</value>
        </textarea>

        <shape name="locbg" from="basegreenbg">
            <area>10,45,780,85</area>
            <cornerradius>6</cornerradius>
        </shape>

        <textarea name="categorylabel">
            <area>15,45,770,35</area>
            <font>dgreenmed</font>
            <value>Category</value>
            <align>allcenter</align>
        </textarea>

        <buttonlist name="category">
            <area>15,80,770,35</area>
            <layout>horizontal</layout>
            <spacing>3</spacing>
            <buttonarea>22,0,770,40</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,175,40</area>
                <state name="active">
                    <shape name="buttonbg" from="basegreenbg">
                        <area>0,0,180,35</area>
                        <cornerradius>4</cornerradius>
                        <line color="#106732" width="1" />
                    </shape>
                    <textarea name="buttontext" from="basetextarea">
                        <area>0,0,180,35</area>
                        <font>dgreenmed</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <shape name="activemask" from="basefadebg">
                    <area>0,0,180,35</area>
                    <fill color="#000000" alpha="45" />
                    <type>roundbox</type>
                    <cornerradius>4</cornerradius>
                </shape>
                <state name="selectedactive" from="active" />
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="downscrollarrow">
                <position>752,7</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>shared/rightarrow_off.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>shared/rightarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>0,7</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>shared/leftarrow_off.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>shared/leftarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <shape name="infobg" from="basegreenbg">
            <area>10,145,780,450</area>
            <cornerradius>8</cornerradius>
        </shape>

        <textarea name="label">
            <area>45,160,130,30</area>
            <font>dgreen</font>
            <value>[x]</value>
        </textarea>

        <textarea name="namelabel" from="label">
            <area>15,160,770,30</area>
            <align>allcenter</align>
            <font>dgreenlarge</font>
            <value>Web Site</value>
        </textarea>

        <shape name="line0">
            <area>18,190,383,1</area>
            <fill style="gradient">
                <gradient start="#bed996" end="#106732" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <shape name="line0b">
            <area>392,190,382,1</area>
            <fill style="gradient">
                <gradient start="#106732" end="#bed996" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <buttonlist name="sites">
            <area>40,200,720,310</area>
            <spacing>4</spacing>
            <layout>vertical</layout>
            <showarrow>no</showarrow>
            <buttonarea>0,0,720,310</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <statetype name="buttoncheck">
                        <state type="off">
                            <imagetype name="checkoff">
                                <filename>shared/checkbox_selected.png</filename>
                            </imagetype>
                        </state>
                        <state type="half">
                            <imagetype name="checkhalf">
                                <filename>shared/checkbox_disabled.png</filename>
                            </imagetype>
                        </state>
                        <state type="full">
                            <imagetype name="checkoff">
                                <filename>shared/checkbox_selected.png</filename>
                            </imagetype>
                            <imagetype name="checkfull">
                                <filename>shared/checkmark.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="buttontext">
                        <area>40,0,720,30</area>
                        <font>lgreen</font>
                       <align>left,vcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <textarea name="buttontext">
                        <font>dgreenmed</font>
                    </textarea>
                    <shape name="selector" from="basegreenbg">
                        <area>32,0,687,30</area>
                        <cornerradius>4</cornerradius>
                        <fill alpha="1" />
                        <line color="#106732" width="1" />
                    </shape>
                </state>
                <state name="selectedinactive" from="active" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>650,345</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>690,345</position>
            </statetype>
        </buttonlist>

        <textarea name="help" from="basetextarea">
            <area>15,450,770,135</area>
            <multiline>yes</multiline>
        </textarea>

    </window>

</mythuitheme>
