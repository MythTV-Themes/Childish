<?xml version="1.0" encoding="utf-8"?>

<mythuitheme>

    <window name="dvd_rip">

        <!-- Optional Items -->

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <value>Rip/Transcode</value>
        </textarea>

        <shape name="locbg" from="basegreenbg">
            <area>10,65,780,525</area>
            <cornerradius>6</cornerradius>
        </shape>

        <shape name="line0">
            <area>18,245,383,1</area>
            <fill style="gradient">
                <gradient start="#bed996" end="#106732" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <shape name="line0b">
            <area>392,245,382,1</area>
            <fill style="gradient">
                <gradient start="#106732" end="#bed996" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <textarea name="overallprog" from="basetextarea">
            <area>15,250,770,35</area>
            <value>Overall Progress</value>
            <align>allcenter</align>
        </textarea>

        <textarea name="jobprog" from="overallprog">
            <position>15,310</position>
            <value>Job Progress</value>
        </textarea>

        <shape name="line1" from="line0">
            <position>18,370</position>
        </shape>

        <shape name="line1b" from="line0b">
            <position>392,370</position>
        </shape>

        <!-- Required Items -->

        <textarea name="warning" from="basetextarea">
            <multiline>yes</multiline>
            <area>15,70,770,175</area>
            <align>allcenter</align>
            <font>dgreenmed</font>
        </textarea>

        <textarea name="overall_text" from="basetextarea">
            <area>15,185,770,35</area>
            <align>allcenter</align>
            <font>dgreenmed</font>
        </textarea>

        <textarea name="job_text" from="basetextarea">
            <area>15,440,770,35</area>
            <align>allcenter</align>
        </textarea>

        <textarea name="numbjobs" from="basetextarea">
            <area>15,480,770,35</area>
            <value>Job 1 of 1</value>
            <align>allcenter</align>
        </textarea>

        <progressbar name="overall_progress" from="baseprogressbar">
            <position>15,290</position>
        </progressbar>

        <progressbar name="job_progress" from="baseprogressbar">
            <position>15,350</position>
        </progressbar>

        <button name="next" from="basesmallbutton">
            <position>15,520</position>
        </button>

        <button name="prev" from="basesmallbutton">
            <position>200,520</position>
        </button>

        <button name="ripscreen" from="basesmallbutton">
            <position>385,520</position>
        </button>

        <button name="cancel" from="basesmallbutton">
            <position>570,520</position>
        </button>
    </window>

    <window name="title_dialog">

        <!-- Optional Items -->

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <value>Rip/Transcode</value>
        </textarea>

        <shape name="locbg" from="basegreenbg">
            <area>10,65,780,525</area>
            <cornerradius>6</cornerradius>
        </shape>

        <textarea name="playtime_text" from="basetextarea">
            <area>15,75,300,35</area>
            <value>Length:</value>
            <align>right,vcenter</align>
            <font>dgreenmed</font>
        </textarea>

        <textarea name="ripcheck_text" from="playtime_text">
            <position>15,115</position>
            <value>Select:</value>
        </textarea>

        <textarea name="ripname_text" from="playtime_text">
            <position>15,155</position>
            <value>Name:</value>
        </textarea>

        <textarea name="ripquality_text" from="playtime_text">
            <position>15,195</position>
            <value>Quality:</value>
        </textarea>

        <textarea name="ripaudio_text" from="playtime_text">
            <position>15,235</position>
            <value>Audio Track:</value>
        </textarea>

        <textarea name="ripacthree_text" from="playtime_text">
            <position>15,275</position>
            <value>AC3 Audio:</value>
        </textarea>

        <textarea name="subtitle_text" from="playtime_text">
            <position>15,315</position>
            <value>Subtitles:</value>
        </textarea>

        <!-- Required Items -->

        <textarea name="playlength" from="basetextarea">
            <area>330,75,300,35</area>
            <value>0:00:00</value>
            <font>dgreenmed</font>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="numb_titles" from="playlength">
            <position>485,75</position>
            <value>Title 1 of 1</value>
        </textarea>

        <checkbox name="ripcheck" from="basecheckbox">
            <position>330,115</position>
        </checkbox>

        <textedit name="name" from="basetextedit">
            <position>330,155</position>
        </textedit>

        <buttonlist name="quality" from="baseselector">
            <position>330,195</position>
        </buttonlist>

        <buttonlist name="audio" from="baseselector">
            <position>330,235</position>
        </buttonlist>

        <checkbox name="ripacthree" from="basecheckbox">
            <position>330,275</position>
        </checkbox>

        <buttonlist name="subtitle" from="baseselector">
            <position>330,315</position>
        </buttonlist>

        <button name="view" from="basemedbutton">
            <position>15,435</position>
            <value>Preview Track</value>
        </button>

        <button name="prev_title" from="basemedbutton">
            <position>290,435</position>
            <value>Previous Title</value>
        </button>

        <button name="next_title" from="basemedbutton">
            <position>560,435</position>
            <value>Next Title</value>
        </button>

        <button name="ripaway" from="basebutton">
            <position>265,510</position>
        </button>

    </window>

</mythuitheme>
