<?xml version="1.0" encoding="UTF-8" ?>
<mythuitheme>

    <window name="mainmenu">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="title" from="baseheading" />
        <textarea name="header" from="baseheading" />

        <statetype name="titles">
            <loadondemand>true</loadondemand>
            <state name="TV">
                <textarea name="heading" from="baseheading">
                    <value>Television</value>
                </textarea>
            </state>
            <state name="MAIN">
                <textarea name="heading" from="baseheading">
                    <value>Main Menu</value>
                </textarea>
            </state>
            <state name="MUSIC">
                <textarea name="heading" from="baseheading">
                    <value>Music</value>
                </textarea>
            </state>
            <state name="GALLERY">
                <textarea name="heading" from="baseheading">
                    <value>Gallery</value>
                </textarea>
            </state>
            <state name="VIDEO">
                <textarea name="heading" from="baseheading">
                    <value>Videos</value>
                </textarea>
            </state>
            <state name="GAMES">
                <textarea name="heading" from="baseheading">
                    <value>Games</value>
                </textarea>
            </state>
            <state name="WEATHER">
                <textarea name="heading" from="baseheading">
                    <value>Weather</value>
                </textarea>
            </state>
            <state name="SCHEDULE">
                <textarea name="heading" from="baseheading">
                    <value>Schedule</value>
                </textarea>
            </state>
            <state name="SEARCH">
                <textarea name="heading" from="baseheading">
                    <value>Program Search</value>
                </textarea>
            </state>
            <state name="WORDS" from="SEARCH" />
            <state name="LISTS" from="SEARCH" />
            <state name="SETUP">
                <textarea name="heading" from="baseheading">
                    <value>Setup</value>
                </textarea>
            </state>
            <state name="TVSETUP" from="TV" />
            <state name="SETUP_TVRECPRIORITIES">

            </state>
            <state name="MEDIA_SETUP">

            </state>
            <state name="INFO_SETUP">

            </state>
            <state name="DVD">
                <textarea name="heading" from="baseheading">
                    <value>Optical</value>
                </textarea>
            </state>
            <state name="DVD_SETTINGS" from="DVD" />
            <state name="MUSIC_SETTINGS">

            </state>
            <state name="VIDEO_SETTINGS" from="VIDEO" />
            <state name="GAME_SETTINGS" from="GAMES" />
            <state name="MANAGE_RECORDINGS" from="SCHEDULE" />
            <state name="LIBRARY">
                <textarea name="heading" from="baseheading">
                    <value>Media Library</value>
                </textarea>
            </state>
            <state name="INFO">
                <textarea name="heading" from="baseheading">
                    <value>Info Center</value>
                </textarea>
            </state>
            <state name="OPTICAL_DISK" from="DVD" />
            <state name="UTIL" from="SETUP" />
            <state name="NETFLIX" from="DVD" />
        </statetype>

        <buttonlist name="menu" from="basebuttonlist" />

    </window>

</mythuitheme>
