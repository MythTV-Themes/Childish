<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="gallery">

        <!-- Optional Items -->

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="heading" from="baseheading">
            <value>Image Gallery</value>
        </textarea>

        <!-- Required Items -->
        <buttonlist name="images">
            <area>0,0,800,600</area>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>none</wrapstyle>
            <spacing>20</spacing>
            <layout>grid</layout>
            <buttonarea>15,35,800,595</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>10,10,170,175</area>
                    <imagetype name="buttonbackground">
                        <position>4,10</position>
                        <filename>gallery/photo_single.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <state name="subfolder">
                            <imagetype name="icon">
                                <filename>gallery/photo_stack.png</filename>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/updirectory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <imagetype name="buttonimage">
                        <area>16,20,120,90</area>
                        <crop>0,0,120,90</crop>
                        <filename>shared/noposter.jpg</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>0,115,157,25</area>
                        <font>lgreen</font>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="childcount" from="basetextarea">
                        <area>53,164,50,23</area>
                        <font>lgreen</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <textarea name="buttontext">
                        <area>0,115,157,25</area>
                        <font>dgreen</font>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="childcount" from="basetextarea">
                        <area>53,164,50,23</area>
                        <font>dgreenmed</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="position" from="basetextarea">
            <area>580,0,110,40</area>
            <align>allcenter</align>
            <font>dgreenlarge</font>
        </textarea>

    </window>

</mythuitheme>
