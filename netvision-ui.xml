<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="netsearch">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="heading" from="baseheading">
            <value>Search Net Videos</value>
        </textarea>

        <shape name="locbg" from="basefadebg">
            <area>10,45,780,85</area>
            <type>roundbox</type>
            <cornerradius>6</cornerradius>
            <fill color="#bed996" alpha="225" />
            <line color="#106732" width="2" />
        </shape>


        <textarea name="searchlab" from="basetextarea">
            <font>dgreenmed</font>
            <area>200,60,150,50</area>
            <align>left,vcenter</align>
            <value>Search Term:</value>
        </textarea>

        <shape name="infobg">
            <area>10,145,780,450</area>
            <type>roundbox</type>
            <cornerradius>8</cornerradius>
            <fill color="#bed996" alpha="225" />
            <line color="#106732" width="2" />
        </shape>

        <textedit name="search" from="basetextedit">
            <position>340,65</position>
        </textedit>

        <buttonlist name="sites" from="basebuttonlist">
            <area>20,130,200,250</area>
        </buttonlist>

        <buttonlist name="results" from="basebuttonlist">
            <area>250,110,520,250</area>
        </buttonlist>

        <imagetype name="preview">
            <area>30,380,190,190</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>240,390,520,50</area>
            <font>dgreenlarge</font>
        </textarea>

        <textarea name="author" from="basetextarea">
            <area>240,415,520,35</area>
            <template>Author: %1</template>
        </textarea>

        <textarea name="filesize_str" from="basetextarea">
            <area>240,450,520,35</area>
            <template>Size: %1</template>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>240,485,520,105</area>
            <multiline>true</multiline>
            <template>Description: %1</template>
        </textarea>

        <textarea name="nosites" from="description">
            <value>Can't find any search scripts!  This usually indicates missing search script prerequisities.  Try running a script from the command line.</value>
        </textarea>

    </window>

    <window name="treeeditor">

        <textarea name="title" from="basetextarea">
            <font>dgreenlarge</font>
            <area>0,20,800,50</area>
            <align>center,vcenter</align>
            <value>Manage Site Subscriptions</value>
        </textarea>

        <buttonlist name="grabbers" from="basebuttonlist">
            <area>50,110,700,390</area>
        </buttonlist>

    </window>

    <window name="rsseditor">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <area>290,0,230,35</area>
            <font>dgreenmed</font>
            <align>allcenter</align>
        </textarea>

        <button name="edit" from="basebutton">
            <position>110,50</position>
            <value>Edit</value>
        </button>
    
        <button name="new" from="basebutton">
            <position>310,50</position>
            <value>New</value>
        </button>

        <button name="delete" from="basebutton">
            <position>510,50</position>
            <value>Remove</value>
        </button>

        <buttonlist name="sites" from="basebuttonlist">
            <area>50,110,700,220</area>
        </buttonlist>

        <textarea name="title" from="basetextarea">
            <area>210,335,550,50</area>
            <font>dgreenlarge</font>
        </textarea>

        <textarea name="author" from="basetextarea">
            <area>210,380,550,35</area>
            <template>Author: %1</template>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>210,420,550,115</area>
            <multiline>true</multiline>
            <template>Description: %1</template>
        </textarea>

        <imagetype name="preview">
            <area>38,330,150,240</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

    </window>

    <window name="rsseditpopup">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <area>290,0,230,35</area>
            <font>dgreenmed</font>
            <align>allcenter</align>
        </textarea>

        <textarea name="titlelab" from="basetextarea">
            <font>dgreenlarge</font>
            <area>0,20,800,50</area>
            <align>center,vcenter</align>
            <value>Manage RSS Subscriptions</value>
        </textarea>

        <textarea name="titlelabel" from="basetextarea">
            <area>30,90,200,30</area>
            <align>right,vcenter</align>
            <value>Feed Name:</value>
        </textarea>

        <textedit name="title" from="basetextedit">
            <position>245,80</position>
        </textedit>

        <textarea name="urllabel" from="basetextarea">
            <area>30,150,200,30</area>
            <align>right,vcenter</align>
            <value>Feed URL:</value>
        </textarea>

        <textedit name="url" from="basetextedit">
            <position>245,140</position>
        </textedit>

        <textarea name="desclabel" from="basetextarea">
            <area>30,210,200,30</area>
            <align>right,vcenter</align>
            <value>Site Description:</value>
        </textarea>

        <textedit name="description" from="basetextedit">
            <position>245,200</position>
        </textedit>

        <textarea name="authorlabel" from="basetextarea">
            <area>30,270,200,30</area>
            <align>right,vcenter</align>
            <value>Feed Author:</value>
        </textarea>

        <textedit name="author" from="basetextedit">
            <position>245,260</position>
        </textedit>

        <checkbox name="download" from="basecheckbox">
            <position>245,330</position>
        </checkbox>

        <textarea name="downloadlabel" from="basetextarea">
            <area>295,335,400,28</area>
            <value>Download this feed automatically</value>
        </textarea>

        <imagetype name="preview">
            <area>245,380,90,90</area>
        </imagetype>

        <button name="preview_browse" from="basebutton">
            <position>355,405</position>
            <value>Choose Image</value>
        </button>

        <button name="cancel" from="basebutton">
            <position>245,510</position>
            <value>Cancel</value>
        </button>

        <button name="ok" from="basebutton">
            <position>470,510</position>
            <value>Save</value>
        </button>

    </window>

    <window name="tree">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <area>290,0,230,35</area>
            <font>dgreenmed</font>
            <align>allcenter</align>
            <value>Browse Net Videos</value>
        </textarea>

        <buttontree name="videos">
            <area>15,45,770,310</area>
            <numlists>2</numlists>
            <spacing>3</spacing>
            <buttonlist name="listtemplate" from="basebuttontreelist" />
        </buttontree>

        <shape name="infobg">
            <area>10,340,780,255</area>
            <type>roundbox</type>
            <cornerradius>8</cornerradius>
            <fill color="#bed996" alpha="225" />
            <line color="#106732" width="2" />
        </shape>

        <textarea name="title" from="basetextarea">
            <area>210,350,550,50</area>
            <font>dgreenlarge</font>
        </textarea>
    
        <textarea name="author" from="basetextarea">
            <area>210,375,550,35</area>
            <template>Author: %1</template>
        </textarea>

        <textarea name="date" from="basetextarea">
            <area>210,410,550,35</area>
            <template>Posted: %1</template>
        </textarea>

        <textarea name="filesize_str" from="basetextarea">
            <area>210,445,550,35</area>
            <template>Size: %1</template>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>210,480,550,115</area>
            <multiline>true</multiline>
            <template>Description: %1</template>
        </textarea>

        <textarea name="nosites" from="description">
            <value>You haven't added any Sites/RSS Feeds yet!  To add a site, press MENU, then choose "Scan/Manage Subscriptions," then "Manage Site Subscriptions."</value>
        </textarea>

        <imagetype name="preview">
            <area>38,330,150,240</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

    </window>

    <window name="browser">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="header" from="baseheading">
            <area>290,0,230,35</area>
            <font>dgreenmed</font>
            <align>allcenter</align>
        </textarea>

        <buttonlist name="videos">
            <area>15,440,770,150</area>
            <layout>horizontal</layout>
            <scrollstyle>center</scrollstyle>
            <spacing>9</spacing>
            <buttonarea>38,0,690,155</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,90,155</area>
                    <imagetype name="buttonbackground" />
                    <imagetype name="buttonimage">
                        <area>10,15,80,120</area>
                        <preserveaspect>true</preserveaspect>
                        <filename>shared/grid_noimage.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <position>35,80</position>
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/directory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/updirectory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount" from="basetextarea">
                        <area>37,97,40,20</area>
                        <font>dgreen</font>
                        <align>right</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="buttonbackground">
                        <position>5,7</position>
                        <filename>mv_browse_selector.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>0,42</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upon">
                        <filename>left_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>730,42</position>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>right_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="title" from="basetextarea">
            <area>40,15,700,100</area>
            <multiline>yes</multiline>
            <font>dgreenlarge</font>
        </textarea>

        <imagetype name="preview">
            <area>30,90,203,311</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <textarea name="description" from="basetextarea">
            <area>245,97,523,145</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="nosites" from="description">
            <value>You haven't added any Sites/RSS Feeds yet!  To add a site, press MENU, then choose "Scan/Manage Subscriptions," then "Manage Site Subscriptions."</value>
        </textarea>

        <textarea name="lenlbl" from="basetextarea">
            <area>260,343,150,35</area>
            <value>Runtime</value>
        </textarea>

        <textarea name="duration" from="basetextarea">
            <area>260,373,350,35</area>
        </textarea>

        <textarea name="authlbl" from="basetextarea">
            <area>470,343,90,35</area>
            <value>Author</value>
        </textarea>

        <textarea name="author" from="basetextarea">
            <area>470,373,100,35</area>
        </textarea>

        <textarea name="userratinglbl" from="basetextarea">
            <area>620,343,150,35</area>
            <align>right,top</align>
            <value>Rating</value>
        </textarea>

        <textarea name="rating" from="basetextarea">
            <area>670,373,100,35</area>
            <align>hcenter,top</align>
        </textarea>

    </window>

    <window name="gallery">

        <textarea name="title" from="basetextarea">
            <area>70,15,460,50</area>
            <cutdown>yes</cutdown>
            <font>dgreenlarge</font>
        </textarea>

        <textarea name="author" from="basetextarea">
            <area>550,15,220,50</area>
            <cutdown>yes</cutdown>
            <font>dgreenmed</font>
        </textarea>

        <textarea name="nosites" from="basetextarea">
            <area>550,15,220,50</area>
            <value>You haven't added any Sites/RSS Feeds yet!  To add a site, press MENU, then choose "Scan/Manage Subscriptions," then "Manage Site Subscriptions."</value>
        </textarea>

        <buttonlist name="videos">
            <area>15,0,770,585</area>
            <layout>grid</layout>
            <spacing>5</spacing>
            <buttonarea>0,65,770,520</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,150,125</area>
                <state name="active">
                    <imagetype name="buttonbackground">
                        <filename>shared/grid_back_reg.png</filename>
                    </imagetype>
                    <imagetype name="buttonimage">
                        <area>10,8,130,90</area>
                        <preserveaspect>true</preserveaspect>
                        <filename>shared/grid_noimage.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <position>80,55</position>
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/directory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/updirectory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="buttontext">
                        <area>5,98,140,25</area>
                        <font>dgreenmed</font>
                        <align>hcenter,bottom</align>
                    </textarea>
                    <textarea name="childcount" from="basetextarea">
                        <area>65,72,55,20</area>
                        <font>dgreenmed</font>
                        <align>right</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="buttonbackground">
                        <filename>shared/grid_back_sel.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>640,20</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upon">
                        <filename>up_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>700,20</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>down_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

    </window>

</mythuitheme>
