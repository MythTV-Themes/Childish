<?xml version="1.0" encoding="utf-8" ?>
<mythuitheme>

    <window name="moviesui">

        <imagetype name="topbar" from="basetopbar" />

        <textarea name="heading" from="baseheading">
            <value>Movie Times</value>
        </textarea>

        <buttontree name="movietreelist">
            <area>5,45,790,375</area>
            <numlists>2</numlists>
            <spacing>2</spacing>
            <buttonlist name="listtemplate" from="basebuttontreelist">
                <area>5,0,395,375</area>
                <buttonarea>5,0,290,375</buttonarea>
                <statetype name="upscrollarrow">
                    <position>20,94%</position>
                    <state type="off">
                        <imagetype name="upon">
                            <filename>shared/uparrow.png</filename>
                            <alpha>100</alpha>
                        </imagetype>
                    </state>
                    <state type="full">
                        <imagetype name="upoff">
                            <filename>shared/uparrow.png</filename>
                        </imagetype>
                    </state>
                </statetype>
                <statetype name="downscrollarrow">
                    <position>350,94%</position>
                    <state type="off">
                        <imagetype name="dnon">
                            <filename>shared/downarrow.png</filename>
                            <alpha>100</alpha>
                        </imagetype>
                    </state>
                    <state type="full">
                        <imagetype name="dnoff">
                            <filename>shared/downarrow.png</filename>
                        </imagetype>
                    </state>
                </statetype>
            </buttonlist>
        </buttontree>

        <shape name="infobg">
            <area>5,421,790,175</area>
            <type>roundbox</type>
            <cornerradius>8</cornerradius>
            <fill color="#bed996" alpha="185" />
            <line color="#77ab77" width="1" />
        </shape>

        <textarea name="movietitle" from="basetextarea">
            <area>15,422,770,35</area>
            <align>allcenter</align>
            <font>dgreenlarge</font>
        </textarea>

        <textarea name="theatername" from="basetextarea">
            <area>15,458,770,22</area>
            <align>allcenter</align>
        </textarea>

        <shape name="line0">
            <area>18,480,383,1</area>
            <fill style="gradient">
                <gradient start="#bed996" end="#106732" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <shape name="line0b">
            <area>392,480,382,1</area>
            <fill style="gradient">
                <gradient start="#106732" end="#bed996" alpha="255" direction="horizontal" />
            </fill>
        </shape>

        <textarea name="rating" from="basetextarea">
            <area>15,485,150,35</area>
            <align>vcenter,left</align>
            <value>Rating:</value>
        </textarea>

        <textarea name="ratingvalue" from="basetextarea">
            <area>150,485,150,35</area>
            <align>vcenter,left</align>
        </textarea>

        <textarea name="runningtime" from="rating">
            <position>15,525</position>
            <value>Running Time:</value>
        </textarea>

        <textarea name="runningtimevalue" from="ratingvalue">
            <position>150,525</position>
        </textarea>

        <textarea name="showtimes" from="rating">
            <position>315,485</position>
            <value>Show Times:</value>
        </textarea>

        <textarea name="showtimesvalue" from="ratingvalue">
            <area>430,488,350,102</area>
            <multiline>yes</multiline>
            <align>vtop,left</align>
        </textarea>

    </window>

</mythuitheme>
